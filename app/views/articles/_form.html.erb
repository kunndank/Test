<%= form_with(model: article, local: true) do |f| %>
  <% if article.errors.any? %>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_field :text %>
  </div><br> 

  <div class="field">    
    <%= f.label :is_active %>
    <%= f.check_box :is_active %>
  </div><br>

  <div class="field">
    <%= f.label :article_category_id %>
    <%= f.collection_select :article_category_id, ArticleCategory.active.order(:position),:id,:name,{:include_blank => true}%>
  </div><br>

  <div class="actions">
    <%= f.submit %>
  </div><br>
<% end %>
